<Window x:Class="Database.View.EditNode.EditClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Database.View.EditNode"
        mc:Ignorable="d"
        Title="Клиент" Height="206" Width="411">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="91*"/>
            <RowDefinition Height="38*"/>
        </Grid.RowDefinitions>

        <TextBox
            Style="{StaticResource TextBoxWithWatermark}"
            Tag="Номер телефона"
            Text="{Binding Phone}"/>
        <TextBox
            Grid.Row="1"
            Margin="0,10,0,10"
            TextWrapping="Wrap"
            Style="{StaticResource TextBoxWithWatermark}"
            Tag="Описание"
            Text="{Binding Description}"/>

        <Button
            Grid.Row="2"
            Style="{StaticResource BaseButton}"
            Content="Сохранить" 
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Command="{Binding AddCommand}" Height="31" Width="91"/>
    </Grid>
</Window>
