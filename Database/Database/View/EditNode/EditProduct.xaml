<Window x:Class="Database.View.EditNode.EditProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Database.View.EditNode"
        mc:Ignorable="d"
        Title="EditProduct" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Товар" FontSize="28" Margin="10"></TextBlock>
        <TextBox Text="Название" Grid.Row="1" Margin="10" FontSize="28" VerticalAlignment="Center"></TextBox>
        <TextBox Text="Цена продажи" Grid.Row="2" Margin="10" FontSize="28" VerticalAlignment="Center"></TextBox>
        <TextBox Text="Цена закупки" Grid.Row="3" Margin="10" FontSize="28" VerticalAlignment="Center"></TextBox>
        <TextBox Text="Цена доставки" Grid.Row="4" Margin="10" FontSize="28" VerticalAlignment="Center"></TextBox>
        <Button Grid.Row="5" Margin="10" Content="Добавить" FontSize="28" Background="Transparent"></Button>
    </Grid>
</Window>
