<Window x:Class="Database.View.EditNode.EditSell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Database.View.EditNode"
        mc:Ignorable="d"
        Title="EditSell" Height="435" Width="846">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="142*"/>
            <ColumnDefinition Width="97*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <DataGrid Margin="0,0,0,10" AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  Background="Transparent"
                  ItemsSource="{Binding AvailabilityList}"
                  SelectedItem="{Binding SelectedAvailable}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Width="50" Binding="{Binding Path=Id}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Товар" Width="*" Binding="{Binding Path=Product.Name}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Количество" Width="*" Binding="{Binding Path=Count}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Цена закупки" Width="*" Binding="{Binding Path=BuyCost}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Цена с доставкой" Width="*" Binding="{Binding Path=DeliverCost}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Ценап продажи" Width="*" Binding="{Binding Path=SellCost}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Профиль" Width="*" Binding="{Binding Path=Profile.Name}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <DataGrid Margin="0,0,10,0" AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  Background="Transparent"
                  ItemsSource="{Binding ClientList}"
                  SelectedItem="{Binding SelectedClient}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Width="50" Binding="{Binding Path=Id}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Телефон" Width="100" Binding="{Binding Path=Phone}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Описание" Width="300*" Binding="{Binding Path=Description}"/>
                        <DataGridTextColumn Header="Машина" Width="100*" Binding="{Binding Path=Car}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <DataGrid Grid.Column="1" AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  Background="Transparent"
                  ItemsSource="{Binding CardList}"
                  SelectedItem="{Binding SelectedCard}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Width="20" Binding="{Binding Path=Id}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Название" Width="*" Binding="{Binding Path=Name}"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>

        <Grid Grid.Column="1"  Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="356*"/>
                <RowDefinition Height="43*"/>
            </Grid.RowDefinitions>
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Выбранный товар:" Padding="0,0,20,0"/>
                    <TextBlock Text="{Binding SelectedAvailable.Product.Name}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Цена покупки:" Padding="0,0,54,0"/>
                    <TextBox Text="{Binding BuyCost, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Цена продажи:" Padding="0,0,50,0"/>
                    <TextBox Text="{Binding SellCost, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Прибыль:" Padding="0,0,70,10"/>
                    <TextBlock Text="{Binding Profit}" Width="100"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Количество:" Padding="0,0,70,10"/>
                    <TextBox Text="{Binding Count, UpdateSourceTrigger=PropertyChanged, 
                        ValidatesOnExceptions=True,
                        ValidatesOnDataErrors=True, 
                        NotifyOnValidationError=True}" Width="100" Margin="-2,0,0,10"/>
                </StackPanel>

                <DatePicker Margin="0,0,0,10" Text="{Binding SellDate}"></DatePicker>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Выбранный клиент:" Padding="0,0,14,10"/>
                    <TextBlock Text="{Binding SelectedClient.Phone}" Width="100"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Выбранная карта:" Padding="0,0,24,10"/>
                    <TextBlock Text="{Binding SelectedCard.Name}" Width="100"/>
                </StackPanel>
            </StackPanel>

            <Button Grid.Row="1" Content="Сохранить" Command="{Binding ExecuteCommand}" IsEnabled="{Binding IsValid}"/>
        </Grid>
    </Grid>
</Window>
