<Window x:Class="Database.View.EditNode.EditSup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Database.View.EditNode"
        mc:Ignorable="d"
        Title="EditSup" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="66*"/>
            <RowDefinition Height="67*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Добавление записи" FontSize="18" Margin="10,10,10,10"></TextBlock>
        <TextBox Grid.Row="1" Margin="10,10,10,10" FontSize="18" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <Button Grid.Row="2" Margin="13" FontSize="18" Content="Добавить" Background="Transparent" Command="{Binding AddCommand}"></Button>
    </Grid>
</Window>
