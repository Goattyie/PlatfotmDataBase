<Window x:Class="Database.View.InputValue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Database.View"
        mc:Ignorable="d"
        Title="Ввод значения" Height="150" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="73*"/>
            <RowDefinition Height="61*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="ValueTextBox" Style="{StaticResource TextBoxWithWatermark}" VerticalAlignment="Center" Tag="Введите значение"/>
        <Button Grid.Row="1" Style="{StaticResource BaseButton}" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Принять" Click="Button_Click"/>
    </Grid>
</Window>
